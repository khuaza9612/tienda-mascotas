{
  "root": true,
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "extends": ["eslint:recommended", "prettier"],
  "env": {
    "es2021": true,
    "node": true
  },
  "ignorePatterns": ["node_modules/*", "docs"],
  "rules": {
    "no-console": "error",
    "semi": ["error", "always"]
  }
}